<Window x:Class="ProductivityTools.Meetings.WpfClient.Controls.EditTreeNode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductivityTools.Meetings.WpfClient.Controls"
        mc:Ignorable="d"
        Title="EditTreeNode" Height="80px" Width="300px">
    <Grid>
        <TextBox Height="20px" Width="200px" HorizontalAlignment="Left" Text="{Binding NewTreeNodeName}"></TextBox>
        <Button Content="Add" Height="20px" Width="50px" HorizontalAlignment="Left" Margin="200 0 0 0" Command="{Binding AddCommand}"></Button>
    </Grid>
    
</Window>
